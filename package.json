    "yup": "^0.26.10"
  },
  "devDependencies": {
    "@types/classnames": "^2.2.6",
    "@types/enzyme": "^3.1.10",
    "@types/enzyme-adapter-react-16": "^1.0.2",
    "@types/jest": "^23.3.3",
    "@types/node": "^8.10.14",
    "@types/react": "^16.7.13",
    "@types/react-redux": "^6.0.0",
